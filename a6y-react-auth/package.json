{
  "name": "a6y-react-auth",
  "version": "0.0.6",
  "homepage": "https://altalogy.github.io/a6y-react-auth/",
  "description": "Authentication forms for React.",
  "main": "./lib/index.js",
  "module": "./lib/index.es.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "npm run clean && npm run prepare && tsc",
    "test": "tsdx test --passWithNoTests --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --quiet",
    "lint-fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "copyfiles -u 1 src/**/*.html src/**/*.css lib/",
    "prepublishOnly": "npm test && npm run lint-fix && npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "clean": "rimraf lib/",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|scss|sss|styl)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "modulePathIgnorePatterns": [
      "lib"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "useTabs": false,
    "arrowParens": "avoid",
    "jsxSingleQuote": true,
    "trailingComma": "all"
  },
  "size-limit": [
    {
      "path": "lib/a6y-react-auth.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "lib/a6y-react-auth.esm.js",
      "limit": "10 KB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Altalogy/a6y-react-auth.git"
  },
  "author": "Altalogy Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Altalogy/a6y-react-auth/issues"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "react": ">=16",
    "react-dom": "16.13.1",
    "babel-loader": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-css-modules": "^2.1.0",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass-loader": "^11.0.1",
    "size-limit": "^4.9.1",
    "ts-jest": "^26.5.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.2.2",
    "@babel/core": "^7.13.1",
    "@size-limit/preset-small-lib": "^4.9.1",
    "@storybook/addon-actions": "^6.1.20",
    "@storybook/addon-controls": "^6.1.20",
    "@storybook/addon-essentials": "^6.1.20",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.20",
    "@storybook/react": "^6.1.20",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "aws-amplify": "^3.3.22"
  }
}
